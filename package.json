{
  "name": "@gilbarbara/react-dropdown",
  "version": "0.0.4",
  "description": "Customizable dropdown for React",
  "author": "Gil Barbara <gilbarbara@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/gilbarbara/react-dropdown"
  },
  "bugs": {
    "url": "https://github.com/gilbarbara/react-dropdown/issues"
  },
  "homepage": "https://github.com/gilbarbara/react-dropdown#readme",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "exports": {
    "import": "./dist/index.mjs",
    "require": "./dist/index.js"
  },
  "files": [
    "dist",
    "src",
    "types.d.ts"
  ],
  "types": "types.d.ts",
  "sideEffects": false,
  "license": "MIT",
  "keywords": [
    "react",
    "react component",
    "select",
    "dropdown"
  ],
  "peerDependencies": {
    "react": ">=16.8.6",
    "react-dom": ">=16.8.6"
  },
  "dependencies": {
    "@emotion/is-prop-valid": "^1.2.0",
    "@emotion/react": "^11.10.4",
    "@emotion/styled": "^11.10.4",
    "@gilbarbara/deep-equal": "^0.1.1",
    "prop-types": "^15.8.1"
  },
  "devDependencies": {
    "@emotion/jest": "^11.10.0",
    "@gilbarbara/esbuilder": "^0.1.0",
    "@gilbarbara/eslint-config": "^0.3.5",
    "@gilbarbara/prettier-config": "^0.1.0",
    "@gilbarbara/tsconfig": "^0.1.1",
    "@size-limit/preset-small-lib": "^8.0.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.3.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^18.7.14",
    "@types/react": "^18.0.18",
    "@types/react-dom": "^18.0.6",
    "del-cli": "^5.0.0",
    "esbuild-jest": "^0.5.0",
    "husky": "^8.0.1",
    "is-ci-cli": "^2.2.0",
    "jest": "^29.0.2",
    "jest-environment-jsdom": "^29.0.2",
    "jest-extended": "^3.1.0",
    "jest-serializer-html": "^7.1.0",
    "jest-watch-typeahead": "^2.1.1",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "replace": "^1.2.1",
    "repo-tools": "^0.2.2",
    "size-limit": "^8.0.1",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.2"
  },
  "scripts": {
    "build": "npm run clean && esbuilder --input=./src/index.jsx --cjs --esm",
    "clean": "del dist/*",
    "test": "is-ci \"test:coverage\" \"test:watch\"",
    "test:coverage": "jest --bail --coverage",
    "test:watch": "jest --watchAll --verbose",
    "lint": "eslint src",
    "format": "prettier \"**/*.{js,jsx,json,yml,yaml,css,less,scss,ts,tsx,md,graphql,mdx}\" --write",
    "validate": "npm run lint && npm run test:coverage && npm run build && npm run size",
    "size": "size-limit",
    "prepare": "husky install"
  },
  "eslintConfig": {
    "extends": [
      "@gilbarbara/eslint-config"
    ],
    "overrides": [
      {
        "files": [
          "test/**/*.ts?(x)"
        ],
        "rules": {
          "no-console": "off"
        }
      }
    ],
    "env": {
      "commonjs": true,
      "es6": true,
      "browser": true
    },
    "rules": {
      "default-param-last": "off",
      "@typescript-eslint/no-non-null-assertion": "off",
      "react/forbid-prop-types": "off",
      "react/require-default-props": "off",
      "react/sort-comp": "off",
      "unicorn/prefer-includes": "off"
    }
  },
  "eslintIgnore": [
    "demo"
  ],
  "prettier": "@gilbarbara/prettier-config",
  "size-limit": [
    {
      "name": "cjs",
      "path": "./dist/index.js",
      "limit": "18 KB"
    },
    {
      "name": "esm",
      "path": "./dist/index.mjs",
      "limit": "18 KB"
    }
  ]
}
